extends layout

block content
  <div class="container pt-5">
    <div class="row">
      <div class="col-md-4">
        h2 Chat live <br />with other idiots
        <form class="needs-validation" action="/chat" method="post" novalidate id="chat-form">
          <div class="mb-3">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="chat-name" placeholder="Your name" value="" required>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>
          <div class="mb-4">
            <label for="message">Message</label>
            <textarea class="form-control" id="chat-message" rows="4" placeholder="Type your message then press enter"></textarea>
          </div>
          <button class="btn btn-primary btn-lg btn-block" type="submit">Send</button>
        </form>
      </div>
      <div class="col-md-7 offset-md-1">
        <div id="chat-container"></div>
      </div>
    </div>
  </div>
